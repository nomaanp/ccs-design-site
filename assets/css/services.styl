@import '_settings'
@import '_animations'
@import 'jeet'

// Service Page settings
about_bg = #f4f1ef
about_color = #937d57
about_font = 22px
about_heading = 4em
gold-color = #937d57
gold-color-light = #beae92 

.services-pag
  width 92.225%
  float left
  margin-top 125px
  margin-left 3.88748%
  margin-right 1.07451%
  -webkit-transition all 300ms
  -moz-transition all 300ms
  transition all 300ms
  padding-top 0px
  .services-group
    width 100%
    float left
    .col
      width 33.3%
      float left
      padding 10px
      h3
        color gold-color
        font-size 24px
      ul
        list-style inside
        margin 0
        padding 0
        li
          line-height 30px
    +between(640px, 768px)
      .col
        h3
          font-size 21px
        ul
          li
            font-size 14px

    +below(639px)
      .col
        width 100%

h1
  .gold
    color #937D57
    font-weight 700

.summary
  width 100%
  float left
  margin-bottom 70px
  .summary-big
    display block
    float left
    margin-left 5.77496%
    width 50.563%
    &last-child
      margin-right 0

    h1
      margin-top 0px
      font-size about_heading
      position relative
      text-transform uppercase
    h5
      color #937D57
      padding-bottom 10px
  .summary-box
    display block
    float left
    margin-left 42.7623%
    margin-right 1.07451%
    margin-top -90px
    padding 60px 55px 60px 50px
    background-color about_bg
    p
      margin-bottom 20px
      font-size about_font
      a
        color about_color
        padding 10px 10px 5px 0
        font-size 18px
        text-decoration none
        border-bottom 4px solid about_color
        -webkit-transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        -moz-transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        &:hover
          padding-right 40px
    .summary-box-link
      float left
      display block
      margin-right 1.07451%
      width 57.23771%
      padding-top 40px
      &:last-child
        margin-right 0
      a
        color #937D57
        padding 10px 10px 5px 0
        text-decoration none
        border-bottom 4px solid #beae92

+between(768px, 985px)
  .summary
    .summary-big
      width 69.563%

    .summary-box
      margin-left 25.762%

+below(767px)
  .summary
    .summary-big
      width 85.563%

    .summary-box
      margin-left 14.762%

+below(640px)
  .summary
    margin-bottom 30px
    .summary-big
      width 80.563%
      h1
        font-size 3em

    .summary-box
      margin-left 14.762%

+below(479px)
  .summary
    margin-bottom 30px
    .summary-big
      width 100%
      margin-left 0px
      h1
        font-size 2em

    .summary-box
      margin-left 0%
      margin-top -42px
      padding 30px 25px 30px 25px

.services-process
  width 100%
  float left
  margin 40px 0
  .services-process-title
    h3
      font-size 3rem
      margin 0px
      text-align center
      +below(480px)
        font-size 2rem

  .services-process-content
    margin-top -38px
    padding 80px 90px 70px
    background-color about_bg
    +below(480px)
      padding 40px 30px 30px
      margin-top -20px
    p
      margin-bottom 20px
      font-size about_font
      text-align center
      +below(480px)
        font-size 20px

  .services-process-button
    width 100%
    float left
    margin-bottom 30px
    .button
      margin 0px
      text-align center
      width 100%
      float left
      font-size 1.2em
      a
        background-color gold-color
        color #fff
        padding 25px 50px
        font-size 100%
        font-weight 500
        text-transform uppercase
        text-decoration none
        +below(480px)
          padding 0.5em 1.5em
        &:hover
          background-color gold-color-light



