@import '_settings'
@import '_animations'
@import 'jeet'

.archive-page
  h2
    text-align left !important
.home-recent-news
  width 100%
  float left
  margin-bottom 0px
  margin-top 95px
  //background recent_img
  h2
    font-size heading_main
    text-align center
    margin 40px 0
  .container
    display: block
    float left
    margin-left 3.88748%
    margin-right 1.07451%
    padding-top 0
    width 92.225%
  article
    border-top 1px solid #a3a6ac
    color #a3a6ac
    display block
    overflow hidden
    padding 30px 0
    position relative
    text-decoration none
    text-align center
    .date
      color #a3a6ac
    h4
      color #3b3d44
      font-size heading_sub
      margin-top 12px
      margin-bottom 12px
      a
        color #3b3d44
  .button
    width 100%
    float left
    margin 30px 0
    text-align center
    a
      border 1px solid recent_btn
      color #a3a6ac
      display inline-block
      float none
      font-size 1rem
      letter-spacing 0px
      padding 0.8em 2.5em
      text-decoration none
      text-transform uppercase
      overflow hidden
      position relative
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
      &:hover
        background #A3A6AC
        color #fff
    a:after
      background recent_btn none repeat 
      content ""
      display block
      height 100%
      left 0
      position absolute
      top 100%
      width 100%
      z-index -1
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
    a:hover:after
        top 0px

+below(480px)
  .home-recent-news
    width 100%
    h2
      margin 25px 0
      font-size 2em
    h4
      font-size: 1rem;
    .date
      font-size 14px
    .button
      a
        padding 0.5em 1.5em


#archive
  font-size 26px
  margin-bottom 50px
  h3
    font-size 26px
  ul
    margin-left 0px
    padding-left 20px
    margin-bottom 20px
    li
      list-style none
      width 100%
      float left
      padding-bottom 15px
      span
        float left
      .date
        font-size 14px
        width 140px
        padding-top 11px
      time
        display inline-block
        font-family "Monaco", "Courier", monospace
        font-size 14px
        padding-right 10px
        position relative
        width 120px
        &:after
          content ":"
          font-size 14px
          padding-right 10px
          position absolute
          right 0
          top -2px
  .this
    -webkit-border-radius 5px
    -moz-border-radius 5px
    -ms-border-radius 5px
    border-radius 5px
    background-color #ffffcc
    margin-left 0
    padding 10px
    li
      &:last-child
        margin-bottom 0