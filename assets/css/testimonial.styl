about_bg = #f4f1ef

.testimonial 
  width 92.225%
  float left
  margin-top 25px
  margin-bottom 50px
  margin-left 3.88748%
  margin-right 1.07451%
  -webkit-transition all 300ms
  -moz-transition all 300ms
  transition all 300ms
  padding-top 0px
  h2
    font-size recent_heading
    text-align center
    margin 40px 0
  #testimonials
    width 60%
    margin 0px auto
    text-align center
    .text
      background-color about_bg
      padding 20px
      margin-bottom 25px
      p:after
        display inline-block
        font normal normal normal 14px/1 FontAwesome
        font-size inherit
        text-rendering auto
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale
        transform translate(0, 0)
        content "\f10e "
        color #808080
        padding-left 5px
      p:before
        display inline-block
        font normal normal normal 14px/1 FontAwesome
        font-size inherit
        text-rendering auto
        -webkit-font-smoothing antialiased
        -moz-osx-font-smoothing grayscale
        transform translate(0, 0)
        content "\f10d "
        color #808080
        padding-right 5px
    img
      border-radius 50%
    .title
      font-size 18px
      font-weight bold
      margin-bottom 4px
      text-transform uppercase
    .designation
      margin-bottom 20px
      font-size 14px

+below(640px)
  .testimonial
    #testimonials
      width 100%

+below(480px)
  .testimonial
    h2
      font-size 2em
      margin 25px 0
    #testimonials
      .text
        p
          font-size 16px
