@import '_settings'
@import '_animations'
@import 'jeet'

.news-page
  .page-head
    width 92.225%
    float left
    margin-left 3.88748%
    margin-right 1.07451%
    h1
      line-height 105px
  
  +above(780px)
    clearfix()
    .articles
      col(4/6, cycle: 2, gutter: 5)
    .exhibits
      col(2/6, cycle: 2, gutter: 5)
      .upcoming, .past
        border-top: 1px solid #E5E5E5

  .exhibits
    .upcoming, .past
      margin-bottom: 30px
  
  .news-item, .exhibit-item
    header
      font-family: raleway
      font-weight: 600
      color: #3B3D44
      letter-spacing: 1px
      a
        color: #6d6d6d
        &:hover
          color: font-light-color
          text-decoration: underline
      .date
        text-transform: uppercase
        display: block
        font-size 12px

  .news-item
    margin-bottom: 50px
    border-bottom: 1px solid #E5E5E5
    
    header
      clearfix()
      
      .thumb
        float: left
        margin-right: 30px
        border: 1px solid #a3a6ac
        img
          display: block
          height: 75px
          filter grayscale(100%)
          -webkit-filter grayscale(100%)
          transition all 0.3s ease-in-out
          -webkit-transition all 0.3s ease-in-out
          &:hover
            filter grayscale(0%)

  
      h2
        margin: 10px 0

    p
      font-size: 1.25em
      margin: 15px 0
      color: rgb(0,0,0)
      margin: 0 0 25px;
      font-size: 18px;
      line-height: 1.5;
      font-weight: 300;
      letter-spacing: 1px
  
  .exhibit-item
    margin-bottom: 20px
    background-color: #EFEFEF
    border: 1px solid #E5E5E5
    padding: 10px 5px
    h4
      margin: 10px 0
  
  +below(580px)
    .news-item, .exhibit-item
      .date
        font-size: 0.875em
    .news-item
      h2
        font-size: 1.125em
      p
        font-size: 1em

