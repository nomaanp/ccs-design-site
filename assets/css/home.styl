@import '_settings'
@import '_animations'
@import 'jeet'
@import 'work'
@import 'testimonial'


html, body, .home-page
  height 93%

.home-page2
  width 100%
  float left
  display block
  margin-right 1.07451%
  width 92.22504%
  margin-left 3.88748%
  -webkit-transition all 300ms
  -moz-transition all 300ms
  transition all 300ms
  padding-top 0px

.home-page
  width 92.225%
  float left
  margin-top 205px
  margin-left 3.88748%
  margin-right 1.07451%
  -webkit-transition all 300ms
  -moz-transition all 300ms
  transition all 300ms
  padding-top 0px


.cd-hero2
    position relative
    float right
    margin auto
    padding 20px
    height 100%
    width 100%
  
  .cd-hero
    background-position center center
    background-repeat no-repeat
    background-size cover
    margin-bottom 20px
    margin-top -100px
    margin-right 0px
    position relative
    float left
    width 100%
    height 100%
    text-align center
    

    .cd-hero-slider
      height 100%
      
    .hero-content
      color #FFF
      text-align center
      width 75%
      h1
        text-transform uppercase
        font-family raleway
        font-weight 100
        font-size 3em
    
      +above(451px)
        align(both)
      +below(450px)
        width 100%
        padding 0 10px
        box-sizing border-box
        align(vertical)
        h1
          font-size 2em

    .cd-full-width
      padding-top 0 !important

    .slide-1
      background-image hero_img
      background-size cover
      background-position center right
    
    .slide-2
      background-image hero_img2
      background-size cover
      background-position center
  
    .arrow
      absolute bottom 60px left 50%
      margin-left -21px
      a
        bounce(2s, true, linear)
        background-color rgba(255, 255, 255, 0.1)
        border-radius 25px
        color #FFF
        font-size 1.25em
        display block
        padding 8px 18px


h1
  .gold
    color #937D57
    font-weight 700

.summary
  width 100%
  float left
  margin-bottom 70px
  .summary-big
    display block
    float left
    margin-left 5.77496%
    width 50.563%
    &last-child
      margin-right 0

    h1
      margin-top 0px
      font-size about_heading
      position relative
      text-transform uppercase
    h5
      color #937D57
      padding-bottom 10px
  .summary-box
    display block
    float left
    margin-left 42.7623%
    margin-right 1.07451%
    margin-top -90px
    padding 60px 55px 60px 50px
    background-color about_bg
    p
      margin-bottom 40px
      font-size about_font
      a
        color about_color
        padding 10px 10px 5px 0
        font-size 18px
        text-decoration none
        border-bottom 4px solid about_color
        -webkit-transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        -moz-transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        transition all 200ms cubic-bezier(0.19, 1, 0.22, 1)
        &:hover
          padding-right 40px
    .summary-box-link
      float left
      display block
      margin-right 1.07451%
      width 57.23771%
      padding-top 40px
      &:last-child
        margin-right 0
      a
        color #937D57
        padding 10px 10px 5px 0
        text-decoration none
        border-bottom 4px solid #beae92

+between(768px, 985px)
  .summary
    .summary-big
      width 69.563%

    .summary-box
      margin-left 25.762%

+below(767px)
  .summary
    .summary-big
      width 85.563%

    .summary-box
      margin-left 14.762%

+below(640px)
  .summary
    .summary-big
      width 80.563%
      h1
        font-size 3em

    .summary-box
      margin-left 14.762%

+below(479px)
  .summary
    margin-bottom 30px
    .summary-big
      width 100%
      margin-left 0px
      h1
        font-size 2em

    .summary-box
      margin-left 0%
      margin-top -42px
      padding 30px 25px 30px 25px


.home-recent-news
  width 100%
  float left
  margin-bottom 0px
  background recent_img
  h2
    font-size heading_main
    text-align center
    margin 40px 0
  .container
    display: block
    float left
    margin-left 3.88748%
    margin-right 1.07451%
    padding-top 0
    width 92.225%
  article
    border-top 1px solid #a3a6ac
    color #a3a6ac
    display block
    overflow hidden
    padding 30px 0
    position relative
    text-decoration none
    text-align center
    .date
      color #a3a6ac
    h4
      color #3b3d44
      font-size heading_sub
      margin-top 12px
      margin-bottom 12px
      a
        color #3b3d44
  .button
    width 100%
    float left
    margin 30px 0
    text-align center
    a
      border 1px solid recent_btn
      color #a3a6ac
      display inline-block
      float none
      font-size 1rem
      letter-spacing 0px
      padding 0.8em 2.5em
      text-decoration none
      text-transform uppercase
      overflow hidden
      position relative
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
      &:hover
        background #A3A6AC
        color #fff
    a:after
      background recent_btn none repeat 
      content ""
      display block
      height 100%
      left 0
      position absolute
      top 100%
      width 100%
      z-index -1
      -webkit-transition all 0.3s ease-in-out
      -ms-transition all 0.3s ease-in-out
      transition all 0.3s ease-in-out
    a:hover:after
        top 0px

+below(480px)
  .home-recent-news
    width 100%
    h2
      margin 25px 0
      font-size 2em
    h4
      font-size: 1rem;
    .date
      font-size 14px
    .button
      a
        padding 0.5em 1.5em



