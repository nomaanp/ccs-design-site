@import '_settings'
@import '_animations'
@import 'jeet'
@import 'testimonial'

.about-page
  width 92.225%
  float left
  margin-top 125px
  margin-left 3.88748%
  margin-right 1.07451%
  -webkit-transition all 300ms
  -moz-transition all 300ms
  transition all 300ms
  padding-top 0px
  .artist-statement
    width 100%
    float left
  .right.profile
    width 100%
    float left
    text-align center
    .profile-img
      width 75%
      margin 0px auto
      +below(639px)
        width 100%
      img
        max-width 100%
        margin-bottom 20px

h1
  .gold
    color #937D57
    font-weight 700

.summary
  width 100%
  float left
  margin-bottom 70px
  .summary-big
    display block
    float left
    width 100%

    h1
      font-size about_heading
      position relative
      text-transform uppercase
      text-align center
      padding 0 28%
      line-height 65px
    h5
      color #937D57
      padding-bottom 10px
  .summary-box
    display block
    float left
    margin-left 6%
    margin-right 6%
    padding 30px 50px
    //background-color about_bg
    p
      margin-bottom 0px
      font-size about_font
      text-align center
      a
        display none
    .summary-box-link
      float left
      display block
      margin-right 1.07451%
      width 57.23771%
      padding-top 40px
      &:last-child
        margin-right 0
      a
        color #937D57
        padding 10px 10px 5px 0
        text-decoration none
        border-bottom 4px solid #beae92

+below(1000px)
  .summary
    .summary-big
      width 100%
      h1
       padding 0 8%

    .summary-box
      margin-left 2.762%

+below(767px)
  .summary
    .summary-big
      h1
        padding 0px

    .summary-box
      margin-left 0%

+below(640px)
  .summary
    .summary-big
      h1
        font-size 3em

+below(479px)
  .summary
    margin-bottom 30px
    .summary-big
      h1
        font-size 2em
        line-height 35px

    .summary-box
      margin-left 0%
      padding 30px 25px 30px 25px


.about-person
  width 100%
  float left
  .about-person-text
    display block
    float left
    margin-left 7.77496%
    margin-right 1.07451%
    padding 50px
    width 84.4501%
    background-color about_bg
    +below(639px)
      margin-left 0px
      margin-right 0px
      width 100%
      padding 30px
    h2
      font-size 2.1rem
      text-transform uppercase
      margin-top 0px
      span.gold
        color gold-color
      +below(480px)
        font-size 1.6rem
    p
      font-size about_font
      margin-bottom 20px

.about-person ~ .about-person
  margin-top 30px

