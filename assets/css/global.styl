@import '_settings'
@import '_animations'
@import 'jeet'

normalize-css()
base()

a
  color: #0e8eb5
  text-decoration: none
  outline: none

p
  font-size: 1.25em
  margin: 15px 0
  color: rgb(0,0,0)
  margin: 0 0 25px;
  font-size: 18px;
  line-height: 1.5;
  font-weight: 300;
  letter-spacing: 1px
  
figure
  margin: 0

.page
  margin-top: header-height
.page-inner
  padding: 0 45px
  +between(546px, 860px)
    padding: 0 30px
  +below(545px)
    padding: 0 20px
    
@font-face {
    font-family: myFirstFont;
    src: url(../fonts/font-webfont.woff);
    src: url(../fonts/font-webfont.svg);
    src: url(../fonts/font-webfont.ttf);
}
*
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

*:before,
*:after
  -webkit-box-sizing border-box
  -moz-box-sizing border-box
  box-sizing border-box

@import '_header'

@import '_footer'

.page.about-page
  width 92.225%
  float left
  margin-top 100px
  margin-left 3.88748%
  margin-right 1.07451%
  -webkit-transition all 300ms
  -moz-transition all 300ms
  transition all 300ms
  padding-top 0px